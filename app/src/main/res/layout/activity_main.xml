<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.ar.core.examples.kotlin.helloar.HelloArActivity">

  <!-- This is our custom AR view component. Note the full package path. -->
  <com.google.ar.core.examples.kotlin.helloar.HelloArView
      android:id="@+id/hello_ar_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />



<!--  &lt;!&ndash; The Google Map fragment, layered on top and positioned at the bottom &ndash;&gt;-->
<!--  <androidx.fragment.app.FragmentContainerView-->
<!--      android:id="@+id/navigation_fragment"-->
<!--      android:name="com.google.android.libraries.navigation.SupportNavigationFragment"-->
<!--      android:layout_width="match_parent"-->
<!--      android:layout_height="250dp"-->
<!--      android:layout_gravity="top"/>-->

  <androidx.fragment.app.FragmentContainerView
      android:id="@+id/map_fragment"
      android:name="com.google.android.gms.maps.SupportMapFragment"
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:layout_gravity="bottom" />

  <!-- Button to trigger voice input -->
  <Button
      android:id="@+id/listenVoiceButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|center_horizontal"
      android:layout_marginTop="16dp"
      android:text="Speak Destination"/>

</FrameLayout>
