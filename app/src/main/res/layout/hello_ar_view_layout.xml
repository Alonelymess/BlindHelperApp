<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The GLSurfaceView for the AR camera feed -->
    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Your DistanceTextView -->
    <com.google.ar.core.examples.kotlin.helloar.DistanceTextView
        android:id="@+id/distanceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:breakStrategy="high_quality"
        android:hyphenationFrequency="normal"  />



    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="25dp"
        android:src="@drawable/ic_settings"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/imageBEVView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone"
        android:scaleType="fitCenter"
        android:contentDescription="Bird's-Eye View Display"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/textBEVView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:text="TextView"
        android:visibility="invisible" />

    <Button
        android:id="@+id/showBEV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/settings_button"
        android:text="Show BEV"
        android:visibility="visible" />

    <TextView
        android:id="@+id/MapsDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="240dp"
        android:layout_marginEnd="240dp"
        android:breakStrategy="high_quality"
        android:ellipsize="end"
        android:hyphenationFrequency="normal"
        android:rotationX="0"
        android:text="Maps Direction" />
</merge>